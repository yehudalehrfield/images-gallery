{
    "editor.tabSize": 2,
    "files.eol": "\n",
    "eslint.validate": [
        "html",
        "javascript",
        "javascriptreact"       
    ],
    "eslint.workingDirectories": [
        {
            "mode":"auto"
        }
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // not sure if this next line is doing anything, 
    // but see the line after the "editor.formatOnSave":true
    "python.pythonPath": "api/.venv/bin/python3",
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--max-line-length=88"
    ],
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    "[python]": {
        "editor.formatOnSave": true
    },
    "python.linting.pylintPath": "api/.venv/bin/python3",
    "python.linting.pylintArgs": ["--disable=C0111"]
}